                        <div class="form-group">
                            @Html.LabelFor(model => model.ObjUserRegistration.Address, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.ObjUserRegistration.Address, new { @class = "form-control", placeholder = "Shipping Address" })
                                @Html.ValidationMessageFor(model => model.ObjUserRegistration.Address)
                            </div>
                        </div>*@

                        <div class="form-group">
                            @Html.LabelFor(model => model.ObjPvc.PinCode, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.ObjPvc.PinCode, new { @class = "form-control input-md", placeholder = "Pin Code" })
                                @Html.ValidationMessageFor(model => model.ObjPvc.PinCode)
                            </div>
                        </div>

                        <!-- Prepended checkbox -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="prependedcheckbox"></label>
                            <div class="col-md-8">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        @Html.TextBoxFor(model => model.ObjPvc.IsTermAccepted, new { @type = "checkbox" , onclick="javascrupt:this.value=this.checked"})
                                        @Html.ValidationMessageFor(model => model.ObjPvc.IsTermAccepted)
