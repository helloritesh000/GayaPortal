                                @Html.TextBoxFor(model => model.ObjUserRegistration.FirstName, new { @class = "form-control input-md", placeholder = "First Name" })
                                @Html.ValidationMessageFor(model => model.ObjUserRegistration.FirstName)
                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            @Html.LabelFor(model => model.ObjUserRegistration.LastName, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.ObjUserRegistration.LastName, new { @class = "form-control input-md", placeholder = "Last Name" })
                                @Html.ValidationMessageFor(model => model.ObjUserRegistration.LastName)
                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            @Html.LabelFor(model => model.ObjUserRegistration.MobileNo, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.ObjUserRegistration.MobileNo, new { @class = "form-control input-md", placeholder = "Mobile No." })
                                @Html.ValidationMessageFor(model => model.ObjUserRegistration.MobileNo)
                            </div>
                        </div>*@

                        <!-- Text input-->
                        <div class="form-group">
                            @Html.LabelFor(model => model.ObjPvc.NumberofCopies, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.ObjPvc.NumberofCopies, new { @class = "form-control input-md", placeholder = "copies." })
                                @Html.ValidationMessageFor(model => model.ObjPvc.NumberofCopies)
                            </div>
                        </div>

