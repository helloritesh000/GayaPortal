@model Dekhlo.Web.Models.ModelProperty

@{
    ViewBag.Title = "ApplyPvcAdharCard";
    Layout = "~/Views/Shared/LayoutResponsive.cshtml";
}

<div class="divParentPostYourAdd">
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                @using (Ajax.BeginForm("ApplyPvcAdharCard", "Home", null,
                    new AjaxOptions
                    {
                        HttpMethod = "Post",
                        UpdateTargetId = "divPvcAdded", 
                        OnSuccess = "Success()", OnFailure = "Failure()", 
                        InsertionMode = InsertionMode.Replace   , LoadingElementId = "loader" },
                    new { @class = "form-horizontal", enctype = "multipart/form-data", id="frmForm", name="frmForm" }))
