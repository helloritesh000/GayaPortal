                                <button id="singlebutton" name="singlebutton" class="btn btn-default">PriceList</button>
                            </div>
                        </div>

                        <!-- File Button -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="filebutton"></label>
                            <div class="col-md-8">
                                <input id="fileUploadPvcDoc" name="fileUploadPvcDoc" class="input-file" type="file" style="display: none;">
                                <input id="btnUploadPvcDoc" class="input-file btn btn-primary" type="button" value="Upload File" onclick="javascript: document.getElementById('fileUploadPvcDoc').click();">
                            </div>
                        </div>

